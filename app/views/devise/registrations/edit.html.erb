<h2 class="my-4 text-center">Editar <%= resource_name.to_s.humanize %></h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Ingresa tu nombre" %>
    </div>

    <div class="mb-3">
      <%= f.label :avatar, "Avatar", class: "form-label" %>
      <%= f.file_field :avatar, class: "form-control", id: "formFileMultiple" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Ingresa tu correo" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="alert alert-warning">
        Actualmente esperando confirmación para: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %> 
      <i class="text-muted">(Déjalo en blanco si no deseas cambiarlo)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Nueva contraseña" %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= @minimum_password_length %> caracteres como mínimo</small>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirma la nueva contraseña" %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password, class: "form-label" %>
      <i class="text-muted">(Necesitamos tu contraseña actual para confirmar los cambios)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Contraseña actual" %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "Actualizar", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <h3 class="mt-5">Cancelar mi cuenta</h3>
  <p>¿Estás descontento? Puedes cancelar tu cuenta aquí:</p>
  <%= button_to "Cancelar mi cuenta", registration_path(resource_name), 
      data: { confirm: "¿Estás seguro de que deseas cancelar tu cuenta?", turbo_confirm: "¿Estás seguro?" }, 
      method: :delete, class: "btn btn-danger" %>

  <div class="mt-3">
    <%= link_to "Volver", :back, class: "btn btn-secondary" %>
  </div>
</div>