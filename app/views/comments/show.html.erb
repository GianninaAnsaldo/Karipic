<p style="color: green"><%= notice %></p>


<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-2">
      <%= image_tag @comment.user.avatar, class: "avatar-img", style:"height: 200px;" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @comment.user.name %></h5>
        <p class="card-text"><%= @comment.content %></p>
      </div>
    </div>
  </div>
</div> 

<div class="row">
  <div class="col">
    <%= link_to "Volver a Comentarios", comments_path, class:"btn btn-secondary" %>
  </div>
  <div class="col d-flex justify-content-end">
    <%= link_to "Editar Comentario", edit_comment_path(@comment),class:"btn btn-warning mx-3" %> 
    <%= button_to "Destruir Comentario", @comment, method: :delete, class:"btn btn-danger" %>
  </div>
</div>
