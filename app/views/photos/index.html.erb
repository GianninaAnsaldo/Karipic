<% content_for :title, "Posts" %>

<h1 class="text-center my-5">Publicaciones</h1>

<% if user_signed_in? && current_user.karina? %>
  <div class="mb-5 d-flex justify-content-start my-2">
    <%= link_to "Nueva Publicación", new_photo_path, class: "btn btn-success" %>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-success text-center">
    <%= notice %>
  </div>
<% end %>

<div class="row">
  <% @photos.each do |photo| %>
    <div class="card col-md-4">
      <%= image_tag photo.image, class: "card-img-top img-fluid" %>
      <div class="card-body">
        <p class="card-text text-center"><%= truncate(photo.content, length: 100) %></p>
      </div>
      <div class="card-footer text-center">
        <%= link_to "Ver esta foto", photo_path(photo), class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? && current_user.karina? %>
  <div class="mb-5 d-flex justify-content-end my-2">
    <%= link_to "Nueva Publicación", new_photo_path, class: "btn btn-success" %>
  </div>
<% end %>

