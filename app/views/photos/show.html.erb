<p style="color: green"><%= notice %></p>

<div class="my-4 d-flex justify-content-end">
  <%= link_to "Volver a Publicaciones", photos_path, class: "btn btn-secondary" %>
</div>

<div class="card text-center">
  <div>
    <%= image_tag @photo.image %>
  </div>
  <div class="card">
    <div class="card-body">
      <%= @photo.content %>
    </div>
    <div class="card-footer d-flex justify-content-between">
      <% if user_signed_in? %>
        <%= link_to "Comentar", new_comment_path(@comment), class: "btn btn-primary" %>
      <% end %>
      <% if user_signed_in? && current_user.karina? %>
        <%= link_to "Edit this photo", edit_photo_path(@photo), class: "btn btn-warning" %> 
      <% end %>

      <% if user_signed_in? && current_user.karina? %>
        <%= button_to "Destroy this photo", @photo, method: :delete, class: "btn btn-danger mx-2" %>
      <% end %>
    </div>
  </div>
</div>

<div class="card my-2">
  <h3 class="card-header text-center">Comentarios</h3>
</div>

<% @comments.each do |comment| %>
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-2">
        <%= image_tag comment.user.avatar, class: "avatar-img", style:"height: 200px;" %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= comment.user.name %></h5>
          <p class="card-text"><%= comment.content %></p>
          <%= link_to "Ver comentario", comment, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div> 
<% end %>

<div class="my-4">
  <%= link_to "Volver a Publicaciones", photos_path, class: "btn btn-secondary" %>
</div>